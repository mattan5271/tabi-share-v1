<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6">

    <table class="table table-bordered table-hover">

      <% @anotherEntries.each do |entry| %>
      <tbody>
        <tr>
          <td>
            <div class="col-xs-2">
              <%= link_to user_user_path(entry.user) do %>
              <%= attachment_image_tag entry.user, :profile_image, :fill, 50, 50, fallback: "no_image.png", size: "50x50", class: "img-circle" %>
              <% end %>
            </div>
            <div class="col-xs-7">
              <%= link_to user_user_path(entry.user), class: "room__name" do %>
              <%= entry.user.name %>
              <% end %>
              <%= link_to user_room_path(entry.room.id) do %>
              <p class="room__text"><%= Message.find_by(id: entry.room.message_ids.last).body %></p>
              <% end %>
            </div>
            <div class="col-xs-3">
              <%= Message.find_by(id: entry.room.message_ids.last).created_at.to_s(:datetime_jp) %>
            </div>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>

  </div>
  <div class="col-xs-3"></div>
</div>