<%= provide(:title, "レビュー 編集") %>

<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6 review">

    <%= form_with model: @review, url: user_tourist_spot_review_path(@review), local: true, builder: CustomFormBuilder do |f| %>

    <%= f.label :images, "写真(複数選択可)" %>
    <span class="review__require-label">必須</span><br>
    <p>
      <%= f.file_field :images, multiple: true, id: "img_field", style: "display:none;" %>
      <div class="btn btn-warning" onClick="$('#img_field').click()">写真アップロード</div>
    </p>

    <%= f.label :title, "タイトル" %>
    <span class="review__require-label">必須</span><br>
    <%= f.text_field :title, placeholder: "例) 楽しかった！", autofocus: true, class: "form-control" %><br>

    <%= f.label :body, "本文" %>
    <span class="review__require-label">必須</span><br>
    <%= f.text_area :body, placeholder: "例) 家族で旅行に行きました。\n 空気がとても美味しくて、良いリフレッシュになりました。", class: "form-control" %><br>

    <%= f.label :score, "点数" %>
    <span class="review__require-label">必須</span><br>
    <%= f.select :score, options_for_select(1..100), {prompt: "選択してください"}, class: "form-control" %><br>

    <%= f.submit "保存", class: "btn btn-success btn-lg btn-block" %>

    <% end %>

    <div class="col-xs-3"></div>
  </div>
</div>