<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6 review">

    <%= form_with model: @review, url: user_tourist_spot_reviews_path, local: true do |f| %>

    <% if @review.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= f.label :images, "写真(複数選択可)" %>
    <span class="review__require-label">必須</span><br>
    <p>
      <%= f.file_field :images, multiple: true, id: "img_field", style: "display:none;" %>
      <div class="btn btn-warning" onClick="$('#img_field').click()">写真アップロード</div>
    </p>

    <%= f.label :title, "タイトル" %>
    <span class="review__require-label">必須</span><br>
    <%= f.text_field :title, class: "form-control" %><br>

    <%= f.label :body, "本文" %>
    <span class="review__require-label">必須</span><br>
    <%= f.text_area :body, class: "form-control" %><br>

    <%= f.label :score, "点数" %>
    <span class="review__require-label">必須</span><br>
    <%= f.select :score, options_for_select(1..100), {prompt: "選択してください"}, class: "form-control" %><br>

    <%= f.submit "投稿", class: "btn btn-success btn-lg btn-block" %>

    <% end %>

    <div class="col-xs-3"></div>
  </div>
</div>