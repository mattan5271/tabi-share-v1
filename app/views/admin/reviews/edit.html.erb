<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6 review">

    <%= form_with model: @review, url: admin_tourist_spot_review_path(@review.tourist_spot, @review), local: true do |f| %>

    <%= f.label :images, "画像" %>
    <p><%= f.file_field :images, multiple: true %></p>

    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %><br>

    <%= f.label :body, "本文" %>
    <%= f.text_field :body, placeholder: "ハイフン無し", class: "form-control" %><br>

    <%= f.label :score, "点数" %>
    <%= f.number_field :score, class: "form-control" %><br>

    <%= label_tag :ステータス %><br>
    <div class="admin-review__radio">
    </div>
    <%= f.radio_button :is_value, "本名", checked: true %>
    <%= f.label :is_value, "本名", class: "admin-review__valid-label" %>
    <%= f.radio_button :is_value, "仮名" %>
    <%= f.label :is_value, "仮名" %><br>

    <%= f.submit "保存", class: "btn btn-primary btn-lg btn-block admin-review__button" %>

    <% end %>

    <div class="col-xs-3"></div>
  </div>
</div>