<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6 devise">

    <%= link_to  root_path do %>
    <%= image_tag 'logo.jpg' %><br>
    <% end %>

    <div class="devise__link">
      <%= render "users/shared/links" %>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control devise__form" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control devise__form" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "記憶する" %>
    </div>
    <% end %>

    <div class="devise__recapcha">
      <%= recaptcha_tags %>
    </div>

    <div class="actions devise__button">
      <%= f.submit "ログイン", class: "btn btn-danger btn-lg btn-block" %>
    </div>
    <% end %>

    <div devise__forget>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name) %><br />
      <% end %>
    </div>

  </div>
  <div class="col-xs-3"></div>
</div>